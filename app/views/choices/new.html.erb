<p>Choice Create</p>
<%= form_for Choice.new do |f| %>
  <div class="form-group">
      <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
      <%= f.label :images %>
    <%= f.file_field :images %>
  </div>
    <div class="form-group">
        <%= f.label :pid %>
    <%= f.text_field :post_id %>
  </div>
    <div class="form-group">
    <%= f.text_field :user_id, value: current_user.id, style: 'display:none'%>
  </div>
    <br>
  <div class="text-center">
    <%= f.submit 'Create Choice', class: 'btn btn-primary' %>
  </div>
<% end %>